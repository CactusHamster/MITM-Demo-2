{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "./dist/server",
        "noImplicitAny": true,
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "ESNext.Promise"],
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "CommonJS"
    },
    "include": [ "./src/server" ]
}